section.home-6 
	.container 
		h2(class="title-40 mb-6 text-center mb-base") Cơ hội nghề nghiệp ở CHAGEE
		.home-6-list(class="grid lg:grid-cols-4 grid-cols-2 lg:gap-6 gap-3 mb-base")
			-for(var i = 0; i<4; i++)
				.item(class="group")
					.image 
						a(href="#" class="img-ratio zoom-img rounded-lg")
							+PugImg()
					.content(class="py-3")
						h3(class="text-xl font-bold text-Primary-S1 leading-[1.3] group-hover:text-Primary-3 mb-2")
							a(href="#") Nhân viên pha chế
						.wrap(class="flex flex-col gap-1 md:gap-0 md:flex-row items-start md:items-center justify-between text-Neutral-800 font-medium")
							.address(class="flex items-center gap-3")
								i.fa-light.fa-location-dot
								a(href="#")
									span Quận 1, TP.HCM 
							.quantity(class="flex items-center gap-3")
								<i class="fa-light fa-user"></i>
								a(href="#")
									span  Số lượng: 2
		.home-6-btn(class="flex-center")
			+btnPrimary()